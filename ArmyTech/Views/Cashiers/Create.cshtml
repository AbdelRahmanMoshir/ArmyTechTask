@model ArmyTech.Data.Entities.Cashier

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>New Cashier</h2>
@using (Html.BeginForm("Save", "Cashiers"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.CashierName)
        @Html.TextBoxFor(m => m.CashierName, new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.BranchID)
        @Html.TextBoxFor(m => m.BranchID, new { @class = "form-control" })
    </div>

    @Html.HiddenFor(m=>m.ID)
    <button type="submit" class="btn btn-primary">Save</button>
}

<div>
    @Html.ActionLink("Back", "Index", "Cashiers", null)
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
