@model IEnumerable<ArmyTech.Data.Entities.InvoiceHeader>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoicedate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cashier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Invoicedate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cashier.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Branch.ID)
            </td>
            <td>
                    @Html.ActionLink("Details", "Details", "Invoices", new { id = item.ID }, null) |
                    @Html.ActionLink("Delete", "Delete", "Invoices", new { id = item.ID }, null)
                </td>
        </tr>
}
    </tbody>
</table>
